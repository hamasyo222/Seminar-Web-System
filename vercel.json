{
  "buildCommand": "npm run build && npm run db:push",
  "framework": "nextjs",
  "regions": ["hnd1"],
  "functions": {
    "app/api/cron/reminders/route.ts": {
      "maxDuration": 10
    },
    "app/api/cron/unpaid/route.ts": {
      "maxDuration": 10
    },
    "app/api/cron/thankyou/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/reminders?type=24h",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/reminders?type=1h",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/unpaid",
      "schedule": "0 9,15 * * *"
    },
    {
      "path": "/api/cron/thankyou",
      "schedule": "0 11 * * *"
    }
  ]
}
